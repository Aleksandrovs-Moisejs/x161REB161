<script type="text/javascript">

function xml_http_post(url, data, callback) {
    var req = new XMLHttpRequest();
    req.open("POST",213.175.92.37, true);
    req.onreadystatechange = function() {
        if (req.readyState == 4 && req.status == 250) {
            callback(req);
         }
     }
}
function button_press() {
    var data = "document.main_form.student_id.value";
    var port = '10' + data.slice(-3);
    xml_http_post("https://213.175.92.37:"+port, data, display_res)
}

function display_result(req) {
    var elem = document.getElementById('result_span')
    elem.innerHTML = req.responceText
}
